<%= simple_nested_form_for [:user, @restaurant], html: { multipart: true }  do |f|%>
<%= f.error_notification %>
<div class="container-md">
  <div class="card">
    <div class="card-header"><strong>Novo Restaurante</strong>
      <div class="float-right">
        Preencha os dados do restaurante que est√° avaliando
      </div>

    </div>
    <div class="card-body">

      <%= render partial: 'establishment', locals: {f: f}  %>
      <%= render partial: 'restaurant_data', locals: {f: f}  %>
      <%= render partial: 'main_courses', locals: {f: f}  %>
      
      <%= render partial: 'chef', locals: {f: f}  %>
      <%= render partial: 'survey', locals: {f: f}  %>
      <%= render partial: 'details', locals: {f: f}  %>
      <%= render partial: 'socialNetwork', locals: {f: f}  %>
      <%= render partial: 'attachments', locals: {f: f}  %>


    </div>
    <div class="card-footer">
      <%= button_tag(type: "submit", class: "btn btn-sm btn-success", disable_with: "gravando...") do %>
      <i class="fas fa-cloud-upload-alt"></i> Salvar
      <% end %>
      <%= link_to raw('<i class="far fa-window-close"></i> Cancelar'), user_restaurants_path, class: "btn btn-sm btn-danger" %>  
    </div>

  </div>
</div>

<%= javascript_pack_tag 'restaurants/restaurants', 'data-turbolinks-track': 'reload' %>
<% end %>
