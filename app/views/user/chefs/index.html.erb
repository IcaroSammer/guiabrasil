<%= title_page "Cadastro de chefes" %>

<%= add_resource "Novo chefe", new_user_chef_path %>

<%= render partial: 'layouts/filters', locals: { path: filters_user_chefs_path, resource: Chef } %>

<table class="table">
  <thead>
    <tr>
      <th><%= Chef.human_attribute_name(:name) %></th>
      <th><%= Chef.human_attribute_name(:description) %></th>
      <th><%= Chef.human_attribute_name(:service_time) %></th>
      <th><%= Chef.human_attribute_name(:active) %></th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <%= display_list_for(@chefs, fields: 3) %>
  </tbody>
</table>

<%= will_paginate @chefs %>
