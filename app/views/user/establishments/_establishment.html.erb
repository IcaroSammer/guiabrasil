
    <div class="row text-center">

      <div class="col-lg-3 col-md-6 mb-4">
        <div class="card h-100">
          
    <% if establishment.hotels.first.photos.attached? %>
          <%= image_tag(establishment.hotels.photos.first, resize: "100x150", class: "card-img-top") %>
      <% else %>
          <%= image_pack_tag 'restaurant_default.png', resize: "100x150", class: "card-img-top" %>
      <% end %>



          <div class="card-body">
            <h4 class="card-title"><%= establishment.name %></h4>
            <p class="card-text">establishment.comments </p>
          </div>
          <div class="card-footer">
            <div class="btn-group">

            <%= link_to 'Mostrar', user_establishment_path(establishment),class: "btn btn-success" %>
            <%= link_to 'Editar', edit_user_establishment_path(establishment),class: "btn btn-info" %>
            <%= link_to 'Inativar', user_establishment_path(establishment),
                        method: :delete,
                        data: { confirm: 'Are you sure?' },class: "btn btn-danger" %>


            </div>
          </div>
        </div>
      </div>
    </div>









