<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

<%= f.fields_for :establishment do |ff| %>

<div class="card">
	<div class="card-header"><strong>Dados do Estabelecimento</strong></div>
	<div class="card-body">

		<div class="form-group row">
			<div class="col-md-12">
				<%= ff.input :name, placeholder: 'Nome do estabelecimento ', required: :true, class: "form-control", readonly: true %>
			</div>
		</div>

		<div class="form-group row">
			<div class="col-md-6">
				<%= ff.input :contact, placeholder: 'Contato ', required: :true, class: "form-control", readonly: true %>
			</div>  
			<div class="col-md-6">
				<%= ff.input :email, placeholder: 'Email do estabelecimento  ', required: :true, class: "form-control", readonly: true %>
			</div>
		</div>

		<div class="form-group row">
			<div class="col-md-3">
				<%= ff.label :nationality, "Nacionalidade: ", class: "col-form-label"  %><br>
				<%= ff.input :nationality, class: "form-control", readonly: true %>
			</div>  
			
			<div class="col-md-3">
				<%= ff.input :cep, placeholder: 'Digite o CEP  ', required: :true, class: "form-control", readonly: true %>

			</div>
			<div class="col-md-3">
				<%= ff.input :number_address, placeholder: 'Número  ', required: :true, class: "form-control", readonly: true %>

			</div>  
			<div class="col-md-3">
				<%= ff.input :complement, placeholder: 'Complemento  ', required: :true, class: "form-control", readonly: true %>
			</div> 
		</div>

		<div class="form-group row">
			<div class="col-md-3">
				<%= ff.input :address, placeholder: 'Endereço do Estabelecimento', required: :true, class: "form-control", readonly: true %>
			</div> 
			<div class="col-md-3">
				<%= ff.input :city, placeholder: 'Cidade', required: :true, class: "form-control", readonly: true %>
			</div> 
			<div class="col-md-3">
				<%= ff.input :neighborhood, placeholder: 'Bairro  ', required: :true, class: "form-control", readonly: true %>
			</div> 
			<div class="col-md-3">
				<%= ff.input :state, placeholder: 'Estado', required: :true, class: "form-control", readonly: true %>
			</div>  
		</div>
		
		<div class="form-group row">
			<div class="col-md-6">
				<%= ff.input :geolocalization, placeholder: 'Geolocalização  ', required: :true, class: "form-control", readonly: true %>
			</div>   
			<div class="col-md-6">
				<%= ff.input :reference_point, placeholder: 'Ponto de Referência', required: :true, class: "form-control", readonly: true %>
			</div>  
		</div>
		<div class="form-group row">
			<div class="col-md-4">
				<%= ff.input :owner, placeholder: 'Dono do estabelecimento  ', required: :true, class: "form-control", readonly: true %>
			</div>
			<div class="col-md-4">
				<%= ff.input :telephone, placeholder: 'Telefone do estabelecimento ', required: :true, class: "form-control", readonly: true %>
			</div>  
			<div class="col-md-4">
				<%= ff.input :reservation_phone, placeholder: 'Telefone para reserva do estabelecimento', required: :true, class: "form-control", readonly: true %>
			</div>
			
		</div>

	</div>
</div>

<% end %>