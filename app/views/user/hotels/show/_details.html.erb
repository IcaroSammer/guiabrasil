<%= simple_form_for [:user, @hotel] do |f|%>
<div class="card">
  <div class="card-header"><strong>Itens de Estrutura</strong></div>
  <div class="card-body">


    <div class="row form-group">
      <div id="form-control col-md-6">
        <strong>Itens de Acomodação:</strong><br >
        <%  Lodging.where(id: f.object.lodging).each  do |it|  %>
        <i class="far fa-thumbs-up" style="color:green;"></i> <%= it.name %><br>
        <% end %>
      </div>
      <div id="form-control col-md-6">
       <strong>Regras:</strong><br >
       <%  Rule.where(id: f.object.rule).each  do |it|  %>
       <i class="far fa-thumbs-up" style="color:green;"></i> <%= it.name %><br>
       <% end %>

     </div>
   </div>

 </div>

</div>
<% end %>
<hr>





