        <div class="col-md-3">
          <%= f.input :active  %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label :survey_date, class: "col-form-label" %>:

          <% if f.object.survey_date.present? %>
          <%= f.date_field :survey_date , class: "form-control datepicker", type: "date" %>
