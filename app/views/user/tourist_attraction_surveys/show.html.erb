<!-- VIEW -->
<%= simple_form_for [:user, @tourist_attraction_survey] do |f|%>
VIEW
  <div class="container-md">
     <div class="card">
      <div class="card-header">
        <strong> Avaliação da Atração Turística - 
                                   
        <%= TouristAttraction.find( f.object.tourist_attraction_id).establishment.name %></strong>
      </div>

