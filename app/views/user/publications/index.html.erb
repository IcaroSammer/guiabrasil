
<%= title_page "Publicações" %>

<%= add_resource "Nova publicação", new_user_publication_path %>

<%= render partial: 'layouts/filters', locals: { path: filters_user_publications_path, resource: Publication } %>

<table class="table">
  <thead>
    <tr>
      <th><%= Publication.human_attribute_name(:name) %></th>
      <th><%= Publication.human_attribute_name(:description) %></th>
      <th><%= Publication.human_attribute_name(:tag) %></th>
      <th><%= Publication.human_attribute_name(:active) %></th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <%= display_list_for(@publications, fields: 3) %>
  </tbody>
</table>

<%= will_paginate @publications %>
