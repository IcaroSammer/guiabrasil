<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<body class="c-app flex-row align-items-center">
 <%= f.error_notification %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card-group">
          <div class="card p-4">
            <div class="card-body">
              
              <h1>Login</h1>
              <p class="text-muted">Acesso à área do Terapeuta</p>
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <%= f.input :email, required: true, autofocus: true, label: 'E-mail', class: 'form-control',input_html: { autocomplete: "email" }   %>
                </div>
              </div>
              <div class="input-group mb-4">
                <div class="input-group-prepend">
                  <%= f.input :password, required: true, label: 'Senha', class: 'form-control',input_html: { autocomplete: "current-password" }  %>
                </div>
              </div>
              <div class="row">
                <div class="col-6">

                  <%= button_tag type: 'submit', class: "btn btn-primary px-4" do %>
                  Entrar  <i class="fas fa-power-off"></i>
                  <% end %>
                </div>
                <div class="col-6 text-right">
                  <%= link_to raw('Esqueci minha senha <i class="far fa-life-ring"></i>'), new_password_path(resource_name),class: 'btn btn-link px-0' %>
                </div>

              </div>
            </div>
          </div>
          <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
            <div class="card-body text-center">
              <div>
                <h1>Acesso Restrito</h1>
                <p>Para acessar esta área peça para que o Administrador do sistema cadastre um usuário novo.</p>

                  <%= link_to raw('<i class="fas fa-home"></i> Voltar'), root_path, class: 'btn btn-lg btn-outline-light mt-3' %>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</body>
<% end %>
