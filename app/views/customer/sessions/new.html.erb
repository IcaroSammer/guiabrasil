


<div class="row justify-content-center">
  <div class="col-12 col-md-10 col-lg-8">
    <div class="row justify-content-center mb-3">
      <div class="card mb-4">
        <div class="card-body">

        <div >
        <%= image_pack_tag 'logo.png', class: "img-responsive" %>
        </div>

