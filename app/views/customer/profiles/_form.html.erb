<%= simple_form_for [:customer, @profile] do |f|%>
<%= f.error_notification %>

<div class="card">
	<div class="card-header"><strong>Meu Perfil</strong></div>
	<div class="card-body">


		<div class="form-group row">
			<div class="col-md-4">
				<%= f.input :name, class: "form-control" %>
			</div>
			<div class="col-md-4">
				<%= f.input :mobile_phone_number, class: "form-control"  %>
			</div>  
			<div class="col-md-4">
				<%= f.input :contact_by_whats_app, class: "form-control"  %>
			</div>   
		</div> 
		<div class="form-group row">
			<div class="col-md-4">
				<%= f.input :active, class: "form-control" %>
			</div>
			<div class="col-md-4">
				<%= f.input :instagram, class: "form-control"  %>
			</div>  
			<div class="col-md-4">
				<%= f.input :facebook, class: "form-control"  %>
			</div>    
		</div>
		<div class="form-group row">          
			<div class="col-md-4">
				<%= f.input :twitter, class: "form-control" %>
			</div>
			<div class="col-md-4">
				<%= f.input :linkedin, class: "form-control"  %>
			</div>  
			  
		</div>
		<div class="form-group row">           
			<div class="col-md-4">
				<%= f.input :cpf, class: "form-control" %>
			</div>
			<div class="col-md-4">
				<%= f.input :rg_rne, class: "form-control"  %>
			</div>  
			<div class="col-md-4">
				<%= f.input :nacionality, class: "form-control"  %>
			</div>
		</div> 
		<div class="form-group row">             
			<div class="col-md-4">
				<%= f.input :zip_code, class: "form-control" %>
			</div>
			<div class="col-md-4">
				<%= f.input :address, class: "form-control"  %>
			</div>  
			<div class="col-md-4">
				<%= f.input :neighbohood, class: "form-control"  %>
			</div>    
		</div>
		<div class="form-group row">          
			<div class="col-md-4">
				<%= f.input :address_complement, class: "form-control" %>
			</div>
			<div class="col-md-4">
				<%= f.input :address_number, class: "form-control"  %>
			</div>  
			<div class="col-md-4">
				<%= f.input :city, class: "form-control"  %>
			</div>  
		</div>   
		<div class="form-group row">         
			<div class="col-md-4">
				<%= f.input :state, class: "form-control" %>
			</div>
			<div class="col-md-4">
				<%= f.input :country, class: "form-control"  %>
			</div>  
			<div class="col-md-4">
				<%= f.input :birthday, class: "form-control"  %>
			</div> 
		</div>
		<div class="form-group row">          
			<div class="col-md-4">
				<%= f.input :gender, class: "form-control" %>
			</div>


		</div>


		<div class="card-footer">

			<%= button_tag(type: "submit", class: "btn btn-sm btn-success", disable_with: "gravando...") do %>
			<i class="fas fa-cloud-upload-alt"></i> Salvar
			<% end %>
			<%= link_to raw('<i class="far fa-window-close"></i> Cancelar'), root_path, class: "btn btn-sm btn-danger" %>  
		</div>
	</div>
</div>







<% end %>
