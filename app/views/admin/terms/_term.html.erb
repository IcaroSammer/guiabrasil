<td>
	<%= term.name %>
</td>
<td>
  <%= term.description %>
</td>
<td>
  <%= term.type_term %>
</td>
<td>
  <%= term.publication_date.strftime("%d/%m/%Y") %>
</td>

<td>
  <%= term.link_term %>
</td>

<td>
    <% if term.active %>
      <i class="icon-thumbs-up" style="color: green;"></i>
    <% else %>
      <i class="icon-thumbs-down" style="color: red;"></i>
    <% end %>
  </td>
  <td>
    <%= show_resource_with_icon admin_term_path(term) %>
    <%= edit_resource edit_admin_term_path(term) %>
    <%# remove_resource(admin_term_path(term), {})%>
    <% if term.active == true %>
  <%= link_to raw('<i class="icon-cancel" style = "color:red"></i>'), admin_term_path(term),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
  <% else %>
     
  <%= link_to raw('<i class="icon-check"style = "color:green"></i>'), admin_term_path(term),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
   <%end%>
  </td>
</tr>