
<%= title_page "Termos de uso da Plataforma" %>

<%= add_resource "Termo", new_admin_term_path %>

<%= render partial: 'layouts/filters', locals: { path: filters_admin_terms_path, resource: Term } %>

<table class="table-page">
  <thead>
    <tr>
      <th><%= Term.human_attribute_name(:name) %></th>
      <th><%= Term.human_attribute_name(:description) %></th>
      <th><%= Term.human_attribute_name(:type_term) %></th>
      <th><%= Term.human_attribute_name(:publication_date) %></th>
      <th><%= Term.human_attribute_name(:inactivated_date) %></th>
      <th><%= Term.human_attribute_name(:active) %></th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <%= display_list_for(@terms, fields: 3) %>
  </tbody>
</table>

<%= will_paginate @terms %>

       