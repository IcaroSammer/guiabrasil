<tr>
  <td><%= accommodation_item.name %></td>
  
  <td>
    <% if accommodation_item.active %>
      <i class="icon-thumbs-up" style="color: green;"></i>
    <% else %>
      <i class="icon-thumbs-down" style="color: red;"></i>
    <% end %>
  </td>
  <td>
    <%= show_resource_with_icon admin_accommodation_item_path(accommodation_item) %>
    <%= edit_resource edit_admin_accommodation_item_path(accommodation_item) %>
    <%# remove_resource(admin_accommodation_item_path(accommodation_item), {})%>
    <% if accommodation_item.active == true %>
  <%= link_to raw('<i class="icon-cancel" style = "color:red"></i>'), admin_accommodation_item_path(accommodation_item),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
  <% else %>
     
  <%= link_to raw('<i class="icon-check"style = "color:green"></i>'), admin_accommodation_item_path(accommodation_item),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
   <%end%>
  </td>
</tr>
