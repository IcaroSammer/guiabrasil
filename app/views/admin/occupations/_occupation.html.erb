<tr>
  <td><%= occupation.name %></td>
  <td><%= occupation.description %></td>
  
  <td>
    <% if occupation.active %>
      <i class="icon-thumbs-up" style="color: green;"></i>
    <% else %>
      <i class="icon-thumbs-down" style="color: red;"></i>
    <% end %>
  </td>
  <td>
    <%= show_resource_with_icon admin_occupation_path(occupation) %>
    <%= edit_resource edit_admin_occupation_path(occupation) %>
    <% if occupation.active == true %>
  <%= link_to raw('<i class="icon-cancel" style = "color:red"></i>'), admin_occupation_path(occupation),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
  <% else %>
     
  <%= link_to raw('<i class="icon-check"style = "color:green"></i>'), admin_occupation_path(occupation),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
   <%end%>
  </td>
</tr>
