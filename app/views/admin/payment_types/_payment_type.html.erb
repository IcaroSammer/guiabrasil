<tr>
  <td><%= payment_type.id %></td>
  <td><%= payment_type.name %></td>
  
  <td><%= payment_type.business_establishment %></td>
  <td><%= payment_type.active %></td>  

  <td>
    <%= show_resource_with_icon admin_payment_type_path(payment_type) %>
    <%= edit_resource edit_admin_payment_type_path(payment_type) %>
    <%# remove_resource(admin_payment_type_path(payment_type), {})%>
    <% if payment_type.active == true %>
  <%= link_to raw('<i class="icon-cancel" style = "color:red"></i>'), admin_payment_type_path(payment_type),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
  <% else %>
     
  <%= link_to raw('<i class="icon-check"style = "color:green"></i>'), admin_payment_type_path(payment_type),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
   <%end%>

  </td>
</tr>