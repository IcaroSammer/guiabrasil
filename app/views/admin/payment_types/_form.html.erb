<%= simple_form_for [:admin, @payment_type] do |f| %>
  <section class='fields-wrapper two-columns'>
    <header>
      <h2>Cadastro de Faixa de Pre√ßo</h2>
    </header>
      <article>
        <%= f.input :active, label: "Ativo?" %>
