<tr>
  <td><%= rule.name %></td>
  
  <td>
    <% if rule.active %>
      <i class="icon-thumbs-up" style="color: green;"></i>
    <% else %>
      <i class="icon-thumbs-down" style="color: red;"></i>
    <% end %>
  </td>
  <td>
    <%= show_resource_with_icon admin_rule_path(rule) %>
    <%= edit_resource edit_admin_rule_path(rule) %>
    <%# remove_resource(admin_rule_path(rule), {})%>
    <% if rule.active == true %>
  <%= link_to raw('<i class="icon-cancel" style = "color:red"></i>'), admin_rule_path(rule),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
  <% else %>
     
  <%= link_to raw('<i class="icon-check"style = "color:green"></i>'), admin_rule_path(rule),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
   <%end%>
  </td>
</tr>
