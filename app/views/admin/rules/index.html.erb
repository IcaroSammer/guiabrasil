<%= title_page "Categorias de regras" %>

<%= add_resource "Regra", new_admin_rule_path %>

<%= render partial: 'layouts/filters', locals: { path: filters_admin_rules_path, resource: Rule } %>



<table class='table-page'>
  <thead>
    <tr>
      <th><%= Rule.human_attribute_name(:name) %></th>
      <th><%= Rule.human_attribute_name(:active) %></th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <%= display_list_for(@rules, fields: 3) %>
  </tbody>
</table>

<%= will_paginate @rules %>