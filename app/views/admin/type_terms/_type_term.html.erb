<td>
	<%= type_term.name %>
</td>
<td>
    <% if type_term.active %>
      <i class="icon-thumbs-up" style="color: green;"></i>
    <% else %>
      <i class="icon-thumbs-down" style="color: red;"></i>
    <% end %>
  </td>
  <td>
    <%= show_resource_with_icon admin_type_term_path(type_term) %>
    <%= edit_resource edit_admin_type_term_path(type_term) %>
    <%# remove_resource(admin_type_term_path(type_term), {})%>
    <% if type_term.active == true %>
  <%= link_to raw('<i class="icon-cancel" style = "color:red"></i>'), admin_type_term_path(type_term),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
  <% else %>
     
  <%= link_to raw('<i class="icon-check"style = "color:green"></i>'), admin_type_term_path(type_term),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
   <%end%>
  </td>
</tr>