<%= title_page "Categorias de ambientes" %>

<%= add_resource "Categoria de ambinete", new_admin_environment_path %>

<%= render partial: 'layouts/filters', locals: { path: filters_admin_environments_path, resource: Environment } %>



<table class='table-page'>
  <thead>
    <tr>
      <th><%= Environment.human_attribute_name(:name) %></th>
      <th><%= Environment.human_attribute_name(:active) %></th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <%= display_list_for(@environments, fields: 3) %>
  </tbody>
</table>

<%= will_paginate @environments %>