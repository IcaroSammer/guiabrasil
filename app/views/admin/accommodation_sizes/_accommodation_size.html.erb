<tr>
  <td><%= accommodation_size.name %></td>
  <td><%= accommodation_size.description %></td>
  <td><%= accommodation_size.number_of_guest %></td>
  <td>
    <% if accommodation_size.active %>
      <i class="icon-thumbs-up" style="color: green;"></i>
    <% else %>
      <i class="icon-thumbs-down" style="color: red;"></i>
    <% end %>
  </td>
  <td>
    <%= show_resource_with_icon admin_accommodation_size_path(accommodation_size) %>
    <%= edit_resource edit_admin_accommodation_size_path(accommodation_size) %>
    <% if accommodation_size.active == true %>
  <%= link_to raw('<i class="icon-cancel" style = "color:red"></i>'), admin_accommodation_size_path(accommodation_size),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
  <% else %>
     
  <%= link_to raw('<i class="icon-check"style = "color:green"></i>'), admin_accommodation_size_path(accommodation_size),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
   <%end%>
  </td>
</tr>
